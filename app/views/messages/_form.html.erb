<%= form_for(Message.new, html: {class: 'form-horizontal'}) do |f| %>
  <% if @message.errors.present? %>
   <div class="alert alert-danger">
       <%= alert %>
       <ul>
        <% @message.errors.full_messages.each do |full_message| %>
        <li>
            <%= full_message %>
        </li>
        <% end %>
       </ul>
   </div>
  <% end %>
  
  <div class="form-group">
    <label for="message_name" class="col-sm-2 control-label">名前</label>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
　</div>
  <div class="form-group">
    <label for="message_age" class="col-sm-2 control-label">年齢</label>
    <div class="col-sm-10">
      <%= f.select :string, options_for_select((1..120).map{|n| ["#{n}歳", n]}), {}, {class: 'form-control'} %>
    </div>
  </div>
  <div class="form-group">
    <label for="message_body" class="col-sm-2 control-label">内容</label>
    <div class="col-sm-10">
      <%= f.text_area :body, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>